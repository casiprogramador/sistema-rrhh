<% layout('/layouts/admin') -%>


  <!-- partial -->
  <div class="content-wrapper">

    <div class="row grid-margin">

      <div class="col-lg-12 grid-margin grid-margin-lg-0">
        <%if (error_msg.length > 0 ) { %>
          <div class="alert alert-warning text-center" role="alert">
            <%= error_msg %>
          </div>
          <% } %>
            <div class="row justify-content-md-center">
              <div class="col-sm-12 col-lg-10 grid-margin print-ignore">
                <div class="card margin-top-30">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-sm-7">
                        <h1 class="card-title">Reporte de asistencia por Area</h1>
                      </div>

                    </div>

    
                    <div id="asistencia-area" class="form-margin-20">
                      <h2 class="card-title">Busqueda por Area</h2>
                      <form action="/reportesAsistencia/reporteAsistenciaArea/reporte" method="post">
                        <div class="form-group row">

                          <label for="area" class="col-sm-3 col-form-label">Area:</label>
                          <div class="col-sm-8">
                            <select class="js-example-basic-single"  name="area">
                              <% for(var i=0; i< areas.length; i++) { %>
                                <option value="<%= areas[i].id %>">
                                  <%= areas[i].desc_area %>
                                </option>
                                <% } %>

                            </select>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label for="fecha reporte" class="col-sm-3 col-form-label">Tipo Personal:</label>
                          <div class="col-sm-8">
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="tipo_personal" value="activo" checked> Personal Activo
                              </label>
                            </div>
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="tipo_personal" value="inactivo"> Personal Inactivo
                              </label>
                            </div>
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="tipo_personal" value="todos"> Personal Activo/Inactivo
                              </label>
                            </div>
                          </div>
                        </div>

                        <h2 class="card-title">Periodo y tipo de reporte</h2>
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Periodo:</label>
                          <label class="col-sm-1 col-form-label">Del:</label>
                          <div class="col-sm-3">
                            <div class="input-group date datepicker" id="datetimepicker1">
                              <input type="text" class="form-control" name="inicio" id="inicio">
                              <div class="input-group-addon">
                                <span class="mdi mdi-calendar-blank"></span>
                              </div>
                            </div>
                          </div>
                          <label class="col-sm-1 col-form-label">al:</label>
                          <div class="col-sm-3">
                            <div class="input-group date datepicker" id="datetimepicker2">
                              <input type="text" class="form-control" name="fin" id="fin">
                              <div class="input-group-addon">
                                <span class="mdi mdi-calendar-blank"></span>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="col-sm-3 col-form-label">Tipo de reporte:</label>
                          <div class="col-sm-8">
                            <select class="form-control" name="tipo" id="tipo">
                              <option value="completo">Reporte completo</option>
                              <option value="observaciones">Reporte con observaciones</option>
                            </select>
                          </div>
                        </div>


                        <div class="col-md-12 text-center">
                          
                          <button type="submit" class="btn btn-primary"> Recuperar</button>
                        </div>
                      </form>
                    </div>
 
                  </div>

                </div>
              </div>
            </div>
      </div>



    </div>
  </div>