<% layout('/layouts/admin') -%>
<!-- partial -->
<div class="content-wrapper">
  <div class="row justify-content-md-center">
        <div class="col-sm-12 col-lg-12 grid-margin print-ignore">
          <div class="card">
              <div class="card-body">

                    <%if (success_msg.length > 0 ) { %>

                        <div class="row">
                                <div class="col align-self-center">
                                    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                        <strong><i class="mdi mdi-check"></i></strong>  <%= success_msg %>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                    </div>
                                </div>
        
                            </div>
                    <% } %>
<h1 class="text-center">Ingresar nuevo CAS</h1>
<form method="post" action="/vacacion/cas/guardar">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Nombres</label>
      <input type="text" class="form-control" id="nombre-input" value="<%= empleado.nombres %>" disabled>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Apellido</label>
      <input type="text" class="form-control" id="apellidos-input" value="<%= empleado.paterno %> <%= empleado.materno %>" disabled>
    </div>
  </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputCity">CAS</label>
        <input type="text" class="form-control" id="input-cas" name="cas">
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">Codigo Verificacion</label>
        <input type="text" class="form-control" id="input-codigo" name="codigo">
      </div>
      <div class="form-group col-md-4">
        <label for="inputZip">Fecha Registro</label>
        <input type="text" class="form-control" id="input-fecha" name="fecha">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputCity">AÑOS</label>
        <input type="text" class="form-control" id="input-cas" name="anio">
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">MESES</label>
        <input type="text" class="form-control" id="input-codigo" name="mes">
      </div>
      <div class="form-group col-md-4">
        <label for="inputZip">DIAS</label>
        <input type="text" class="form-control" id="input-fecha" name="dia">
      </div>
      <input type="hidden" name="empleado_id" value="<%= empleado.id %>">
      <input type="hidden" name="empleado_ndi" value="<%= empleado.ndi %>">
    </div>
  <div class="text-center" >
    <button type="submit" class="btn btn-primary">Ingresar</button>
  </div>

</form>
                  <div class="col-sm-12" style="margin-top: 30px">
                    <h2 class="card-title text-center">Historico CAS: <%= empleado.nombres %></h2>
                  </div>
                  <table id="table-prescripcion" class="table table-bordered">
                        <thead >
                          <tr>
                            <th class="table-dark" >CAS</th>
                            <th class="table-dark" >Codigo Verificacion</th>
                            <th class="table-dark" >Fecha Registro</th>
                            <th class="table-dark" >Nombre</th>
                            <th class="table-dark" >AÑOS</th>
                            <th class="table-dark" >MESES</th>
                            <th class="table-dark" >DIAS</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(var cas of empleado.cas) { %>
                                <% var class_estado = (cas.estado) ? "table-warning" : "" %>
                                <tr class="<%= class_estado %>">
                                
                                    <td><%= cas.cas %></td>
                                    <td><%= cas.codigo_verificacion %></td>
                                    <td><%= moment(cas.fecha).format( 'DD/MM/YYYY')  %></td>
                                    <td><%= empleado.paterno %> <%= empleado.nombres %></td>
                                    <td><%= cas.aa %></td>
                                    <td><%= cas.mm %></td>
                                    <td><%= cas.dd %></td>
                                </tr>

                            <% } %>
                        </tbody>
                      </table>


          </div>
      </div>
  </div>
</div>
</div>
