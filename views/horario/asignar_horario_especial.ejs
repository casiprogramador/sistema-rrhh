<% layout('/layouts/admin') -%>
<!-- partial -->
<div class="content-wrapper">
  <h1 class="page-title">Asignar Horario Especial </h1>
  <div class="row grid-margin">
      
    <div class="col-lg-12 grid-margin grid-margin-lg-0">
        
        <form method="post" action="/horario/asignar_horario_especial/grabar_unico">

            <div class="card col-lg-12 col-lg-2   ">
                <div class="card-body col-10 col-2 text-center">
                    <h2 class="page-title">Horario Unico</h2>
                    <div class="form-group row">
                            <label for="fecha reporte" class="col-sm-2 col-form-label">Fecha:</label>
                            <div class="col-sm-3">
                                    <div class="input-group date datepicker b-l-blue">
                                        <input type="text" class="form-control" name="fecha" id="fecha"  required>
                                        <div class="input-group-addon">
                                        <span class="mdi mdi-calendar-blank"></span>
                                        </div>
                                    </div>
                            </div>
                                                
                    </div>
                    <div class="form-group row">
                            <label for="fecha reporte" class="col-sm-2 col-form-label" >Horario:</label>
                            <div class="col-sm-4">
                                <select class="form-control" id="horario" name="horario">
                                        <% for(var i=0; i< horario.length; i++) { %>
                                                <option value="<%= horario[i].id %>"><%= horario[i].descripcion %></option>
                                        <% } %>
                                </select>
                            </div>
                    </div>  
                        
                    <input class="btn btn-primary  col-sm-1  " type="submit" value="Grabar ">
                </div>
                       
               
                 </div>
        </form>

   </div>
</div>

<div class="row grid-margin">
        
      <div class="col-lg-12 grid-margin grid-margin-lg-0">
          
  
          <form method="post" action="/horario/asignar_horario_especial/grabar_especial">
