<% layout('/layouts/admin') -%>
<!-- partial -->
<div class="content-wrapper">
  <h1 class="page-title">Horario Especial por Usuario </h1>
  <div class="row grid-margin">
      
    <div class="col-lg-12 grid-margin grid-margin-lg-0">
        
        <form method="post" action="/horario/asignar_horario_especial/grabar_unico">

            <div class="card col-lg-12 col-lg-2   ">
             
                <div class="card-body col-10 col-2 text-center">
                <div class="form-group row">
                <label for="calculo_dias" class="col-sm-2 col-form-label">Nombre:</label>
                        <div class="col-sm-5">
                                <input type="text" class="form-control" class="form-control"  value= "<%= horario[0].nombres %>"  readonly="readonly">
                        </div>
                </div>
                <div class="form-group row">
                        <label for="calculo_dias" class="col-sm-2 col-form-label">Area:</label>
                                <div class="col-sm-5">
                                <input type="text" class="form-control"  value= "<%= horario[0].cargo %>"  readonly="readonly" >
                                </div>
                </div>
                <div class="form-group row">
                        <label for="calculo_dias" class="col-sm-2 col-form-label">Cargo:</label>
                                <div class="col-sm-5">
                                <input type="text" class="form-control" class="form-control"  value= "<%= horario[0].desc_area %>"  readonly="readonly">
                                </div>
                </div>
                <div class="form-group row" id="panel-boletas">
                                <div class="col-12">
                                          <table id="table-horarios" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                            <thead>
                                              <tr>
                                                  <th>Descripcion</th>
                                                  <th>Fecha</th>
                                                  <th>Horario</th>
                                                  <th>Acciones</th>
                                       
                                              </tr>
                                            </thead>
                                            <tbody>
                                                        <% for(var i=0; i< horario2.length; i++) { %>
              
                                                      <tr>
              
                                                          <td><%= horario2[i].descripcion%> </td>                                 
                                                          <td><%= moment(horario2[i].fecha).format( 'DD/MM/YYYY') %> </td>
                                                          <td><%= horario2[i].min_entrada_1%>    <%= horario2[i].max_entrada_1%>     <%= horario2[i].min_salida_1%>     <%= horario2[i].max_salida_1%>      <%= horario2[i].min_entrada_2%>      <%= horario2[i].max_entrada_2%>        <%= horario2[i].min_salida_2%> <%= horario2[i].max_salida_2%> </td>
                                                          <td class="text-left" width="10%">
                                                              <a href="/horario/lista_horario_especial/eliminar/<%= horario2[i].id %>" class="btn btn-outline-primary" type="submit" >Borrar</a>
                                                         </td>
                                                        </tr>
              
                                                      <% } %>
                                                    </tbody>
                                          
                                          </table>
                                        </div>
                        </div>
                 </div>          
                </div>
        </form>

   </div>
</div>


 