<% layout('/layouts/admin') -%>


<!-- partial -->
<div class="content-wrapper">
       <h1 class="page-title text-center">Lista Horarios Especiales</h1>

       <div class="row grid-margin">
       </div>
         <div class="col-12 col-lg-12 grid-margin grid-margin-lg-0">
           <div class="card">
             <div class="card-body">

                <%if (success_msg.length > 0 ) { %>
                  
                                          <div class="row">
                                                  <div class="col align-self-center">
                                                      <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                                          <strong><i class="mdi mdi-check"></i></strong>  <%= success_msg %>
                                                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                              <span aria-hidden="true">&times;</span>
                                                              </button>
                                                      </div>
                                                  </div>
                          
                                              </div>
                                      <% } %>
               <form  method="post" action="/horario/lista_horario/nuevo">
          
                        
              
                        <div class="col-md-12 text-center"> 
                          <button type="submit" class="btn btn-primary">Nuevo Horario</button>
                        </div>
                      </form>
                        
                      <div class="form-group row" id="panel-boletas">
                          <div class="col-12">
                                    <table id="table-horarios" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                      <thead>
                                        <tr>
                                            <th>C.I.</th>
                                            <th>Nombre</th>
                                            <th>Area</th>
                                            <th>Cargo</th>
                                            <th>Horario</th>
                                            <th>Acciones</th>
                                            <th>Acciones</th>
                                 
                                        </tr>
                                      </thead>
                                      <tbody>
                                          <% for(var i=0; i< Empleado.length; i++) { %>

                                        <tr>

                                            <td><%= Empleado[i].ndi%> </td>
                                            <td><%= Empleado[i].paterno%>  <%= Empleado[i].materno%>  <%= Empleado[i].nombres%></td>
                                            <td><%= Empleado[i].desc_area%> </td>
                                            <td><%= Empleado[i].cargo%> </td>
                                            <td>
                                                <%= Empleado[i].descripcion %>
                                            </td>
                                            <td class="text-left" width="10%">
                                                 <a href="/horario/lista_horario_especial/editar/<%= Empleado[i].id %>" class="btn btn-outline-primary" type="submit" >Crear</a>
                                            </td>
                                            <td class="text-left" width="10%">
                                                <a href="/horario/lista_horario_especial/ver/<%= Empleado[i].id %>" class="btn btn-outline-primary" type="submit" >Ver</a>
                                           </td>
                                          </tr>
                                        <% } %>
                                      </tbody>
                                    </table>
                                  </div>
                  </div>
             
             </div>
           </div>
         </div>

</div>
 