<% layout('/layouts/admin') -%>
<!-- partial -->
<div class="content-wrapper">
  <h1 class="page-title">Asignar Horario</h1>
  <div class="row grid-margin">
      
    <div class="col-lg-12 grid-margin grid-margin-lg-0">
        

        <form method="post" action="/horario/lista_asignacion_horario/modificar">

            <div class="card col-lg-12 col-lg-2   ">
                <div class="card-body col-10 col-2">
                    <div>
                                        
                     <div class="form-group row">
                           <label for="calculo_dias" class="col-sm-2 col-form-label">Nombre:</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" class="form-control"  value= "<%= horario[0].nombres %>"  readonly="readonly">
                                </div>
                        </div>
                        <div class="form-group row">
                                <label for="calculo_dias" class="col-sm-2 col-form-label">Area:</label>
                                     <div class="col-sm-5">
                                         <input type="text" class="form-control"  value= "<%= horario[0].cargo %>"  readonly="readonly" >
                                     </div>
                        </div>
                        <div class="form-group row">
                            <label for="calculo_dias" class="col-sm-2 col-form-label">Cargo:</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control" class="form-control"  value= "<%= horario[0].desc_area %>"  readonly="readonly">
                                    </div>
                        </div>

                
                        <div class="form-group row">


                                <label for="area" class="col-sm-2 col-form-label">Horario:</label>
                                
                                  <div class="col-sm-5">
                                    <select class="form-control" id="tipo-horario" name="tipo_horario">
                                        <% for(var i=0; i< combo_horario.length; i++) { %>
                                            <option value="<%= combo_horario[i].id%>"><%= combo_horario[i].descripcion%></option>
                                        <% } %>
                                    </select>
                            </div>
                        </div>

                        <input type="hidden" name="ndi" value= "<%= horario[0].ndi %>">  
                   
                    </div>
                </div>
                <div class="form-group row  text-right">
                 
                    <input class="btn btn-primary " type="submit" value="Grabar ">
             
            <div>
                    <a class="nav-link  "  type="button" href="/horario/lista_asignacion_horario">Volver</a>
                </div>         
            </div>
            </div>
        </form>

   </div>
</div>
</div>