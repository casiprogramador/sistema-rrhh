<% layout('/layouts/admin') -%>


<!-- partial -->
<div class="content-wrapper">
       <h1 class="page-title text-center">Lista de Areas</h1>

       <div class="row grid-margin">
       </div>
         <div class="col-12 col-lg-12 grid-margin grid-margin-lg-0">
           <div class="card">
             <div class="card-body">

                <%if (success_msg.length > 0 ) { %>
                  
                                          <div class="row">
                                                  <div class="col align-self-center">
                                                      <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                                          <strong><i class="mdi mdi-check"></i></strong>  <%= success_msg %>
                                                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                              <span aria-hidden="true">&times;</span>
                                                              </button>
                                                      </div>
                                                  </div>
                          
                                              </div>
                                      <% } %>
                        
                      <div class="form-group row" id="panel-boletas">
                          <div class="col-12">
                                    <table id="table-horarios" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                      <thead>
                                        <tr>
                                            <th>I.D.</th>
                                            <th>AREA</th>
                                            <th>I.D. AREA SUPERIOR</th>
                                            <th>ESTADO</th>
                                            <th>NIVEL</th>
                                            <th>Acciones</th>
                                 
                                        </tr>
                                      </thead>
                                      <tbody>
                                          <% for(var i=0; i< Area.length; i++) { %>

                                        <tr>

                                            <td><%= Area[i].id%> </td>
                                            <td><%= Area[i].desc_area%></td>
                                            <td><%= (Area[i].id_area_superior)? Area[i].id_area_superior  : " "%> </td>
                                            <td><%= (Area[i].estado)? "Activo" : "Inactivo "%> </td>
                                            <td>
                                                <%= Area[i].nivel %>
                                            </td>
                                            <td class="text-center">
                                                 <a href="/lista_area/editar/<%= Area[i].id%>" class="btn btn-outline-primary" type="submit" >Editar</a>
                                            </td>
                                          </tr>

                                        <% } %>
                                      </tbody>
                                    </table>
                                  </div>
                  </div>
             
             </div>
           </div>
         </div>

</div>
 