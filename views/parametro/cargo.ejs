
<% layout('/layouts/admin') -%>
<!-- partial -->
<div class="content-wrapper">
    <h1 class="page-title">Cargos</h1>
        <div class="row grid-margin">
            <div class="col-lg-10 grid-margin grid-margin-lg-0">
                <%if (error_msg3.length > 0 ) { %>
                    <div class="alert alert-warning text-center" role="alert">
                         <%= error_msg3 %>
                    </div>
                <% } %>
                <form method="post" action="/lista_cargo/modificar">

                <div class="card col-lg-12 col-lg-4 ">
                    <div class="card-body col-12 col-4">
                            
                                    <div class="form-group row">
                                            <label for="fecha reporte" class="col-sm-3 col-form-label" >Areas:</label>
                                            <div class="col-sm-8">
                                                <select class="form-control" id="tipo-area" name="tipo_area">
                                                <% for(var i=0; i< Area.length; i++) { %>
                                                    <option value="<%= Area[i].id %>" <%= (cargo[0].id_area == Area[i].id)? 'selected' : '' %>><%= Area[i].desc_area %> </option>
                                                <% } %>
                                                        
                                                </select>
                                            </div>
                                    </div> 
                                    <div class="form-group row">
                                            <label for="fecha reporte" class="col-sm-3 col-form-label" >Escala Salarial:</label>
                                            <div class="col-sm-8">
                                                <select class="form-control" id="tipo-escala" name="tipo_escala">
                                                    <% for(var i=0; i< Escala.length; i++) { %>
                                                        <option value="<%= Escala[i].id %>" <%= (cargo[0].id_escala_salarial == Escala[i].id) ? 'selected' : '' %> ><%= Escala[i].denominacion_puesto %> (Sueldo " <%= Escala[i].sueldo_mensual%> ")</option>
                                                        <% } %>
                                                        
                                                </select>
                                            </div>
                                    </div> 
                                
                                <div class="form-group row">
                                <label for="calculo_dias" class="col-sm-3 col-form-label">Descricion:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" class="form-control" name="descripcion" id="descripcion" value="<%= cargo[0].cargo %>" >
                                </div>
                                <input type="hidden" name="id" value= "<%= cargo[0].id%>">    
                        
                    </div>
                    <div class="card-body btn-demo text-center">
                        <input class="btn btn-primary" type="submit" value="Modificar">
                    </div>
                </div>
                </form>
            </div>
        </div>
</div>
