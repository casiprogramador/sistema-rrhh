<% layout('/layouts/admin') -%>


<!-- partial -->
<div class="content-wrapper">
       <h1 class="page-title text-center">Lista de Cargo</h1>

       <div class="row grid-margin">
       </div>
         <div class="col-12 col-lg-12 grid-margin grid-margin-lg-0">
           <div class="card">
             <div class="card-body">

                <%if (success_msg.length > 0 ) { %>
                  
                                          <div class="row">
                                                  <div class="col align-self-center">
                                                      <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                                          <strong><i class="mdi mdi-check"></i></strong>  <%= success_msg %>
                                                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                              <span aria-hidden="true">&times;</span>
                                                              </button>
                                                      </div>
                                                  </div>
                          
                                              </div>
                                      <% } %>
                      <form  method="post" action="/cargo_nuevo/grabar">
                        <div class="col-md-12 text-center"> 
                          <button type="submit" class="btn btn-primary">Nuevo Cargo</button>
                        </div>
                      </form>
                     
                      <div class="form-group row" id="panel-boletas">
                          <div class="col-12">
                                    <table id="table-horarios" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                      <thead>
                                        <tr>
                                            <th>N.D.I</th>
                                            <th>Cargo</th>
                                            <th>AREA</th>
                                            <th>Escala Salarial</th>
                                            <th>Sueldo</th>
                                            <th>Acciones</th>
                                 
                                        </tr>
                                      </thead>
                                      <tbody>
                                          <% for(var i=0; i< Cargo.length; i++) { %>

                                        <tr>

                                            <td><%= Cargo[i].id%> </td>
                                            <td><%= Cargo[i].cargo%></td>
                                            <td><%= Cargo[i].desc_area%> </td>
                                            <td><%= Cargo[i].denominacion_puesto%> </td>
                                            <td>
                                                <%= Cargo[i].sueldo_mensual %>
                                            </td>
                                            <td class="text-center">
                                                 <a href="/lista_cargo/editar/<%= Cargo[i].id%>" class="btn btn-primary" type="submit" >
                                                  <i class="mdi mdi-pencil" style="font-size: 20px"></i>
                                                  <span> Editar</span> 
                                                  </a>
                                           </td>
                                          </tr>

                                        <% } %>
                                      </tbody>
                                    </table>
                                  </div>
                  </div>
             
             </div>
           </div>
         </div>

</div>
 