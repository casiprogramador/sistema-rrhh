<% layout('/layouts/admin') -%>
<div class="content-wrapper">
    <h1 class="page-title">Nuevo Personal</h1>
        <div class="row grid-margin">
            <div class="col-12 col-lg-12">
                <!--wizard with validation-->
          <div class="row grid-margin">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <form id="form-nuevo-personal" action="#">
                    <div>                      
                        <h3>Datos Personales</h3>
                        <section>
                          <label for="name">Apellido Paterno *</label>
                          <input id="name" name="paterno" type="text" class="form-control required" required>
                          <label for="surname">Apellido Materno *</label>
                          <input id="surname" name="materno" type="text" class="form-control required" required>
                          <label for="email">Nombres *</label>
                          <input id="email" name="nombre" type="text" class="form-control required email" required>
                          <div class="row">
                              <div class="col-4">
                                    <label for="address">CI: </label>
                                    <input id="address" name="ci" type="text" class="form-control">

                              </div>
                              <div class="col-4">
                                    <label for="address">Expendido: </label>
                                    <select class="form-control" id="select-expendido">
                                          <option value="LP">La Paz</option>
                                          <option value="BN">Beni</option>
                                          <option value="CH">Chuquisaca</option>
                                          <option value="CB">Cochabamba</option>
                                          <option value="OR">Oruro</option>
                                          <option value="PA">Pando</option>
                                          <option value="PT">Potosi</option>
                                          <option value="SC">Santa Cruz</option>
                                          <option value="TJ">Tarija</option>
                                     </select>
                              </div>
                              <div class="col-4">
                                    <label for="address">Genero: </label>
                                    <select class="form-control" id="select-expendido">
                                          <option value="LP">Masculino</option>
                                          <option value="BN">Femenino</option>
                                     </select>
                              </div>
                          </div>

                        </section>
                      <h3>Datos de Contrato</h3>
                      <section>
                        <label for="userName">Nro Contrato *</label>
                        <input id="userName" name="userName" type="text" class="form-control required">
                        <label for="password">Fecha Inicio *</label>
                        <input id="password" name="password" type="password" class="form-control required">
                        <div class="row">
                            <div class="col-4">
                                <label for="address">Cargo </label>
                                <select class="form-control" id="select-expendido">
                                    <option value="LP">La Paz</option>
                                </select>
                            </div>
                            <div class="col-4">
                                <label for="address">Tipo Empleado </label>
                                      <select class="form-control" id="select-expendido">
                                            <option value="LP">Masculino</option>
                                            <option value="BN">Femenino</option>
                                       </select>
                                </div>
                            </div>
                      </section>

                      <h3>Datos Usuario</h3>
                      <section>
                        <label for="name">Usuario *</label>
                        <input id="name" name="name" type="text" class="form-control required">
                        <label for="surname">Password *</label>
                        <input id="surname" name="surname" type="text" class="form-control required">

                      </section>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--vertical wizard-->
            </div>
        </div>
</div>