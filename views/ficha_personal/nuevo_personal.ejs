<% layout('/layouts/admin') -%>
<div class="content-wrapper">
    <h1 class="page-title">Nuevo Personal</h1>
        <div class="row grid-margin">
            <div class="col-12 col-lg-12">
                <!--wizard with validation-->
          <div class="row grid-margin">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <form id="form-nuevo-personal" action="/personal/nuevo" method="post">
                    <div>                      
                        <h3>Datos Personales</h3>
                        <section>
                          <div class="form-group">
                          <label for="paterno">Apellido Paterno *</label>
                          <input id="paterno" name="paterno" type="text" class="form-control required" id="paterno">                          
                          </div>
                          <div class="form-group">
                          <label for="materno">Apellido Materno *</label>
                          <input id="materno" name="materno" type="text" class="form-control required">
                          </div>
                          <label for="nombres">Nombres *</label>
                          <input id="nombres" name="nombre" type="text" class="form-control required">
                          <div class="row">
                          <div class="col-4 form-group">

                                    <label for="ci">CI: </label>
                                    <input id="ci" name="ci" type="text" class="form-control required">


                          </div>
                          <div class="col-4 form-group">

                                    <label for="address">Expendido: </label>
                                    <select class="form-control" id="select-expendido" name="expendido">
                                          <option value="LP">La Paz</option>
                                          <option value="BN">Beni</option>
                                          <option value="CH">Chuquisaca</option>
                                          <option value="CB">Cochabamba</option>
                                          <option value="OR">Oruro</option>
                                          <option value="PA">Pando</option>
                                          <option value="PT">Potosi</option>
                                          <option value="SC">Santa Cruz</option>
                                          <option value="TJ">Tarija</option>
                                     </select>

                          </div>
                          <div class="col-4 form-group">

                                    <label for="address">Genero: </label>
                                    <select class="form-control" id="select-sexo" name="sexo">
                                          <option value="M">Masculino</option>
                                          <option value="F">Femenino</option>
                                     </select>

                          </div>
                          </div>
                        </section>
                      <h3>Datos de Contrato</h3>
                      <section>
                      <div class="form-group">
                        <label for="nro contrato">Nro Contrato *</label>
                        <input id="contrato" name="contrato" type="text" class="form-control required">
                      </div>  
                      <div class="form-group">
                        <label for="fecha inicio">Fecha Inicio *</label>
                        <div class="input-group date date-picker b-l-blue">
                          <input id="fecha" name="fecha" type="text" class="form-control date datepicker required">
                          <div class="input-group-addon">
                            <span class="mdi mdi-calendar-blank"></span>
                          </div>
                        </div>

                      </div>

                        <div class="row">
                            <div class="col-7">
                                <label for="address">Cargo </label>
                                <select class="form-control" id="select-cargo1" name="id_cargo">
                                 <% for(var cargo of cargos) { %>
                                      <option value="<%= cargo.id %>"><%= cargo.cargo %></option>
                                  <% } %>
                                </select>
                            </div>
                            <div class="col-5">
                                <label for="address">Tipo Empleo </label>
                                      <select class="form-control" id="select-tipoempleo" name="id_tipoempleado">
                                          <% for(var tipoempleado of tiposempleado) { %>
                                            <option value="<%= tipoempleado.id %>"><%= tipoempleado.tipo %></option>
                                          <% } %>
                                       </select>
                                </div>
                            </div>
                            <div class="row">
                              <div class="col-7">
                                  <label for="address">Horario por Defecto </label>
                                  <select class="form-control" id="select-horario" name="id_horario">
                                    
                                   <% for(var horario of horarios) { %>
                                        <option value="<%= horario.id %>"><%= horario.descripcion %></option>
                                    <% } %>
                                  </select>
                              </div>

                              </div>
                      </section>
                      <h3>Datos Usuario</h3>
                      <section>
                      <div class="form-group">
                        <label for="name">Usuario *</label>
                        <input id="usuario" name="usuario" type="text" class="form-control required">
                      </div>
                      <div class="form-group">
                        <label for="surname">Password *</label>
                        <input id="password" name="password" type="text" class="form-control required">
                      </div>
                      </section>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!--vertical wizard-->
            </div>
        </div>
</div>