<% layout('/layouts/admin') -%>


<!-- partial -->
<div class="content-wrapper">
       <h1 class="page-title text-center">Lista de Empleados</h1>
       <div class="row grid-margin">
       </div>
         <div class="col-12 col-lg-12 grid-margin grid-margin-lg-0">
           <div class="card">
             <div class="card-body">

                <%if (success_msg.length > 0 ) { %>
                  
                                          <div class="row">
                                                  <div class="col align-self-center">
                                                      <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                                                          <strong><i class="mdi mdi-check"></i></strong>  <%= success_msg %>
                                                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                              <span aria-hidden="true">&times;</span>
                                                              </button>
                                                      </div>
                                                  </div>
                          
                                              </div>
                                      <% } %>
                                      <form  method="GET" action="/empleado/buscar">
                                        <div class="form-group row justify-content-md-center">
                                           <label for="area" class="col-sm-2 col-form-label">Estado Empleado:</label>
                                             <div class="col-sm-3">
                                                     <select class="form-control" name="estado" id="estado" >

                                                         <option value="1" <%= (opcion_estado == 1)? 'selected' : '' %> >Activos</option>
                                                         <option value="0" <%= (opcion_estado == 0)? 'selected' : '' %> >Inactivos</option>
                                                         <option value="Todos" <%= (opcion_estado == 'Todos')? 'selected' : '' %> >Todos</option>
                                                     </select>
                                                   </div>
                                             </div>
                                             
                                             <div class="col-md-12 text-center"> 
                                               <button type="submit" class="btn btn-primary">Buscar Empleados</button>
                                             </div>
                                           </form>
                      <div class="form-group row" id="panel-boletas">
                          <div class="col-12">
                                    <table id="table-horarios" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                      <thead>
                                        <tr>
                                            <th>C.I.</th>
                                            <th>Nombre</th>
                                            <th>Area</th>
                                            <th>Cargo</th>
                                            <th>Horario</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                            
                                        </tr>
                                      </thead>
                                      <tbody>
                                          <% for(var i=0; i< Empleado.length; i++) { %>

                                        <tr>

                                            <td><%= Empleado[i].ndi%> </td>
                                            <td><%= Empleado[i].paterno%>  <%= Empleado[i].materno%>  <%= Empleado[i].nombres%></td>
                                            <td><%= Empleado[i].desc_area%> </td>
                                            <td><%= Empleado[i].cargo%> </td>
                                            <td>
                                                <%= Empleado[i].descripcion %>
                                            </td>
                                            <td><%= Empleado[i].estado == true   ? 'ACTIVO' : 'INACTIVO' %>  </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                      Opciones
                                                    </button>
                                                    <div class="dropdown-menu">
                                                      <a class="dropdown-item" href="/empleado/editar/<%= Empleado[i].id %>"><i class="mdi mdi-file-document"></i> Editar Contrato</a>
                                                      <a class="dropdown-item" href="/empleado/editar/<%= Empleado[i].id %>"><i class="mdi mdi-timetable"></i> Editar Horario</a>
                                                    </div>
                                                  </div>
                                            </td>
                                          </tr>

                                        <% } %>
                                      </tbody>
                                    </table>
                                  </div>
                  </div>
             
             </div>
           </div>
         </div>

</div>
 