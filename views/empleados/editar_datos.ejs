<% layout('/layouts/admin') -%>
<!-- partial -->
<div class="content-wrapper">
  <h1 class="page-title">Editar Datos</h1>
  <div class="row grid-margin">
      
    <div class="col-lg-12 grid-margin grid-margin-lg-0">
        

        <form method="post" action="/empleado/editar">

            <div class="card col-lg-12 col-lg-2   ">
                <div class="card-body col-10 col-2">
                    <div>
                                        
                     <div class="form-group row">
                           <label for="calculo_dias" class="col-sm-2 col-form-label">Nombre:</label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" class="form-control"  value= "<%= empleado[0].paterno %> <%= empleado[0].materno %> <%= empleado[0].nombres %>"  readonly="readonly">
                                </div>
                        </div>
                        <div class="form-group row">
                                <label for="calculo_dias" class="col-sm-2 col-form-label">Area:</label>
                                     <div class="col-sm-5">
                                         <input type="text" class="form-control"  value= "<%= empleado[0].cargo %>"  readonly="readonly" >
                                     </div>
                        </div>
                        <div class="form-group row">
                            <label for="calculo_dias" class="col-sm-2 col-form-label">Cargo:</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control" class="form-control"  value= "<%= empleado[0].desc_area %>"  readonly="readonly">
                                    </div>
                        </div>

                
                        <div class="form-group row">


                                <label for="area" class="col-sm-2 col-form-label">Horario:</label>
                                
                                  <div class="col-sm-5">
                                    <select class="form-control" id="tipo-horario" name="id_horario">
                                        <% for(var i=0; i< combo_horario.length; i++) { %>
                                            <option value="<%= combo_horario[i].id%>"  <%= (empleado[0].id_horario == combo_horario[i].id)? 'selected' : '' %> ><%= combo_horario[i].descripcion%></option>
                                        <% } %>
                                    </select>
                            </div>
                        </div>
                        <div class="form-group row">


                            <label for="estado" class="col-sm-2 col-form-label">Contrato:</label>
                            
                              <div class="col-sm-10">
                                <select class="form-control" id="tipo-horario" name="id_contrato">
                                    <% for(var i=0; i< combo_contrato.length; i++) { %>
                                        <option value="<%= combo_contrato[i].id%>"  <%= (empleado[0].id_contrato == combo_contrato[i].id)? 'selected' : '' %> ><%= combo_contrato[i].nro_contrato %></option>
                                    <% } %>
                                </select>
                        </div>

                    </div>
                    <div class="form-group row">
                            <label for="area" class="col-sm-2 col-form-label">Estado:</label>
                            <div class="col-sm-10">
                                    <div class="form-check" >
                                            <label class="form-check-label">
        
                                                <input type="checkbox" class="form-check-input"  name="estado"  <%= (empleado[0].estado) ? "checked" : " "  %> >
        
                                            </label>
                                    </div>
                            </div>

                        </div>

                        <input type="hidden" name="id_empleado" value= "<%= empleado[0].id %>">  
                   
                    </div>
                </div>
                <div class="form-group row  text-right">
                 
                    <input class="btn btn-primary " type="submit" value="Grabar ">
             
                <div>
                    <a class="nav-link  "  type="button" href="/empleado">Volver</a>
                </div>         
            </div>
            </div>
        </form>

   </div>
</div>
</div>